 7E0D  FC                       	cld 
 7E0E  8B F4                    	mov	si,sp 
 7E10  BF 7E00 R                	mov	di,offset start 
 7E13  B9 0100                  	mov	cx,100h 
 7E16  F3/ A5                   	rep	movsw 
 7E18  BB 7E1D R                	mov	bx,offset chk0 
 7E1B  FF E3                    	jmp	bx 
